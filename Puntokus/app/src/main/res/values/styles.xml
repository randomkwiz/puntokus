<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/colorIntermedio1</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorOscuro1</item>
        <item name="colorControlNormal">@color/colorIntermedio1</item>
        <item name="colorControlActivated">@color/colorOscuro1</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">@color/colorOscuro1</item>
        <item name="android:textColorPrimary">@color/colorIntermedio1</item>
    </style>


    <style name="ProgressDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorOscuro1</item>
        <item name="android:textColorPrimary">@color/colorIntermedio1</item>
        <item name="android:background">@color/sombra</item>
    </style>
</resources>
