<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sombra"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.AccountFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            android:background="@drawable/roundedrectangleshape"
            android:backgroundTint="@color/colorIntermedio1"
            android:layout_margin="10dp"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/sectionTitleAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/menu_account"
                    android:textSize="50dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"

                    app:layout_constraintTop_toTopOf="parent" />


                <TextView

                    android:id="@+id/lblNickname_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:text="@string/lblNickname_account"
                    android:textSize="25dp"
                    android:textStyle="italic"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/sectionTitleAccount" />

                <TextView
                    android:id="@+id/txtNickname_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="@string/loadingData"

                    android:textSize="25dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/lblNickname_account" />

                <TextView
                    android:id="@+id/lblEmail_account"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:text="@string/lblEmail_account"
                    android:textSize="25dp"
                    android:textStyle="italic"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txtNickname_account" />

                <TextView
                    android:id="@+id/txtEmail_account"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="@string/loadingData"

                    android:textSize="25dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/lblEmail_account" />


                <TextView
                    android:id="@+id/txtSounds"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="@string/sounds"
                    android:textSize="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txtEmail_account"
                    />


                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/toggleSounds"
                    android:layout_marginEnd="35dp"
                    android:textOn="ON"
                    android:textOff="OFF"
                    android:showText="false"

                    android:splitTrack="false"
                    app:layout_constraintTop_toTopOf="@id/txtSounds"
                    app:layout_constraintBottom_toBottomOf="@id/txtSounds"
                    app:layout_constraintEnd_toEndOf="parent"
                    />



                <TextView
                    android:id="@+id/txtMusic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="@string/music"
                    android:textSize="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txtSounds"
                    />


                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/toggleMusic"
                    android:textOn="ON"
                    android:textOff="OFF"
                    android:showText="false"

                    android:layout_marginEnd="35dp"
                    app:layout_constraintTop_toTopOf="@id/txtMusic"
                    app:layout_constraintBottom_toBottomOf="@id/txtMusic"
                    app:layout_constraintEnd_toEndOf="parent"
                    />






                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_logout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="24dp"
                    android:background="@color/colorOscuro1"
                    android:padding="12dp"
                    android:text="@string/logout"
                    android:textColor="@color/sombra"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>